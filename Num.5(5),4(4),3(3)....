void main()
{
        int n,i,j;
        clrscr();
        printf("Enter n:");
        scanf("%d",&n);
        for(i=n;i>=1;i--)
        { 
                 for(j=1;j<=1;j++)
                         printf("  ");
                 for(j=i;j<=n;j++)
                         printf("%3d",j);
                  printf("\n");
        }
        getch();
}
